{% if content %}
	 <!-- ======= Hero Section ======= -->
<section {{attributes.addClass("impact-hero")}}>
    <div class="container position-relative">
        <div class="row gy-5" data-aos="fade-in">
            <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center text-center text-lg-start">
                {% if content.impact_hero_title %}
					<h2 {{region_attributes.impact_hero_title.addClass("impact-hero-title")}}>{{content.impact_hero_title}}</h2>
				{% endif %}

				{% if content.impact_hero_description %}
	                <div {{region_attributes.impact_hero_description.addClass("impact-hero-description")}}>{{content.impact_hero_description}}</div>
				{% endif %}
        
		        <div class="d-flex justify-content-center justify-content-lg-start">
                    {% if content.impact_hero_call_to_action %}
						<span class="btn-get-started">{{content.impact_hero_call_to_action}}</span>
					{% endif %}

					{% if content.impact_hero_watch_video %}
						<span class="glightbox btn-watch-video d-flex align-items-center"><svg fill="currentColor" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><path d="m371.7 238-176-107c-15.8-8.8-35.7 2.5-35.7 21v208c0 18.4 19.8 29.8 35.7 21l176-101c16.4-9.1 16.4-32.8 0-42zM504 256C504 119 393 8 256 8S8 119 8 256s111 248 248 248 248-111 248-248zm-448 0c0-110.5 89.5-200 200-200s200 89.5 200 200-89.5 200-200 200S56 366.5 56 256z"/></svg>{{content.impact_hero_watch_video}}</span>
					{% endif %}
                </div>
            
			</div>
			{% if content.impact_hero_image %}
	             <div class="col-lg-6 order-1 order-lg-2">
					{% if content.impact_hero_image %}
						{{content.impact_hero_image}}
					{% endif %}
	            </div>
			{% endif %}
        	</div>
	    </div>

    	<div class="icon-boxes position-relative">
        	<div class="container position-relative">
            	<div class="row gy-4 mt-5">

					{% if content.impact_hero_many_elements %}
    					<div {{region_attributes.impact_hero_many_elements.addClass(['col-xl-3', 'col-md-6'])}} data-aos="fade-up" data-aos-delay="200">
							{{content.impact_hero_many_elements}}
						</div>
					{% endif %}
          			<!--End Icon Box -->
            	</div>
        	</div>
    	</div>
	</div>
</section>
  <!-- End Hero Section -->
{% endif %}